<%- include('layout_top') %>
<h1><%= title %></h1>
<ul>
    <%  if(book_list){ %>
        <% for( const book of book_list ){ %>
        <li>
            <a href=<%=book.url%>><%= book.title %></a>
            (<%= book.author.family_name %>, <%= book.author.first_name %>)
        </li>
    <% }}else{ %>
        <li>There are no books.</li>
    <% } %>
</ul>
<%- include('layout_bottom') %>